{
  "buffer_font_features": {
    "calt": false
  },
  "hard_tabs": false,
  "tab_size": 4,
  "languages": {
    "TypeScript": {
      "format_on_save": "on",
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": [
            "x",
            "--bun",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "JSONC": {
      "format_on_save": "on",
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "bun",
          "arguments": [
            "x",
            "--bun",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
